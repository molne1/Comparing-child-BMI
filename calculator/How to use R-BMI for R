
#download the function 
download.file(
  url = "https://raw.githubusercontent.com/molne1/Comparing-child-BMI/refs/heads/main/calculator/calculate_r_bmi.R",
  destfile = "calculate_r_bmi.R",
  mode = "wb"
)

#call this in your R-file
source("calculate_r_bmi.R")

# now you can use it
df_results <- calculate_r_bmi(df_test,
                          sex_column = "sex",    # fill in your sex column - as of yet it has to be coded as 1 (boy), 2 (girl)
                          bmi_column = "bmi",     # your column for bmi 
                          age_column = "age_months",    #your column for age either 
                          age_in_months = TRUE)   #if this is false then age should be in years 
